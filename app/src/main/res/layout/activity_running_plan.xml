<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.runningplans.RunningPlanActivity">
    <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainerViewRunningPlanList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:name="de.hirola.runningplan.ui.runningplans.RunningPlanListFragment"
            android:layout_weight="1"/>
    <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainerViewRunningPlanDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:name="de.hirola.runningplan.ui.runningplans.RunningPlanDetailsFragment"
            android:layout_weight="1"/>
</LinearLayout>